<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="459dp" />

    <Button
        android:id="@+id/Explicito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicito"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        tools:layout_editor_absoluteY="264dp" />

    <Button
        android:id="@+id/Implicito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/Explicito"
        app:layout_constraintStart_toStartOf="@+id/Explicito"
        tools:layout_editor_absoluteY="163dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_ir_list_view"
        android:layout_width="97dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:text="List view"
        app:layout_constraintEnd_toEndOf="@+id/btn_ciclo_vida"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/Implicito"
        app:layout_constraintTop_toBottomOf="@+id/btn_ciclo_vida"
        tools:ignore="UnknownId" />

</androidx.constraintlayout.widget.ConstraintLayout>